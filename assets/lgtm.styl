.container.lgtm
  .user
    position relative
    margin 10px 0
    padding-left 4px
    color gray-light
    .pre
      float left
    .avatar
      height 40px
      width 40px
      border-radius 50%
      display inline-block
      margin 0 3px 0 10px
    .login
      font-size 12px
    .logout
      float right
  .text
    textarea
      font-size 16px
      width calc('100% - 20px')
      height 80px
      padding 10px
      border-top solid 1px gray-lighter
      border-bottom solid 1px gray-lighter
  ul
    margin-bottom 10px
    li
      margin-top 10px
      img, button
        width 100%
      img
        min-height: 30px
        background-color yellow
      button
        cursor pointer