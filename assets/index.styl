.container.index
  text-align center
  .instruction
    .arrow-up
      height = 160px
      color = gray-light
      border-param = dotted 2px color
      text-align center
      height height
      margin 10px 0 5px
      position relative
      div
        display inline-block
        position absolute
      &__point
        transform rotate(45deg)
        width 30px
        height 30px
        border-top border-param
        border-left border-param
        top 5px
        left 47%
        overflow visible
      &__line
        width 0px
        height height
        border-right border-param
    .tip
      position absolute
      left 53%
      top 90px
      padding 2px 4px
      border-bottom dotted 2px yellow
    &:hover
      .tip
        transform rotate(-10deg)
    a
      text-decoration none
      display inline-block
      text-align center
      color black
      font-size 30px
      font-weight 100
      letter-spacing 0.1em
      padding 8px 32px
      background-color white-bg
      border solid 2px black
      vertical-align middle
      transition background-color 0.3s ease 0
    a:hover
      background-color yellow
  .title
    margin 70px 0
    font-size 50px
    font-weight 300
    a
      background-color transparent
      border none
    .lgtmin
      width 180px
      display inline-block
      font-family 'Cabin Sketch' cursive
      font-size 42px
      position relative
      left -10px
    .times
      position relative
      left 5px
    .github
      width 180px
      display inline-block
      font-family 'Collegiate' cursive
      font-weight bold
      position relative
      left 13px
    .bmlt
      font-size 40px
      margin-top 30px
  .screen
    img
      width 320px
      height 568px
      margin-bottom 30px